{
  "name": "fat-controller",
  "version": "1.0.0",
  "description": "Schedule and release Nostr posts automatically",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "pm2:dev": "pm2 start ecosystem.dev.config.cjs",
    "pm2:prod": "pm2 start ecosystem.prod.config.cjs",
    "pm2:stop:dev": "pm2 stop fcdev",
    "pm2:stop:prod": "pm2 stop fcprod",
    "pm2:restart:dev": "pm2 restart fcdev || npm run pm2:dev",
    "pm2:restart:prod": "pm2 restart fcprod || npm run pm2:prod",
    "pm2:logs:dev": "pm2 logs fcdev",
    "pm2:logs:prod": "pm2 logs fcprod",
    "pm2:delete": "pm2 delete fcdev fcprod || true",
    "pm2:status": "pm2 status"
  },
  "dependencies": {
    "@nostr-dev-kit/ndk": "^2.14.33",
    "@types/ws": "^8.18.1",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "keytar": "^7.9.0",
    "node-cron": "^3.0.3",
    "nostr-tools": "^2.16.2",
    "nostrmq": "^0.4.0",
    "sqlite3": "^5.1.7",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  }
}
